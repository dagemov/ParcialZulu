@model Tickets.Models.TicketViewModel
@{
    ViewData["Title"] = "CheckTicket";
}

<h1>Consultar Tiquete</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckTicket">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <label asp-for="id" class="control-label"></label>
             <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
                </div>         
          
            <div class="form-group mt-2">
                <input type="submit" value="Buscar" class="btn btn-outline-primary" />
               <input type="hidden" asp-for="id"></input>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}