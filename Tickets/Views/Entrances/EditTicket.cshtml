@using Tickets.Helpers
@model Tickets.Models.TicketVM2

@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditTicket</title>
</head>
<body>

<h4>TicketVM2</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WasUsed" /> @Html.DisplayNameFor(model => model.WasUsed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Document" class="control-label"></label>
                <input asp-for="Document" class="form-control" />
                <span asp-validation-for="Document" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntranceId" class="control-label"></label>
                <input asp-for="EntranceId" class="form-control" />
                <span asp-validation-for="EntranceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



</body>
</html>
